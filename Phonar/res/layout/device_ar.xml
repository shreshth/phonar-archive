<?xml version="1.0" encoding="utf-8"?>
<com.phonar.ar.DeviceLayerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@android:color/transparent" >

        <ImageView
            android:id="@+id/image_ar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/thumbnail"
            android:gravity="center"
            android:maxHeight="100dip"
            android:maxWidth="100dip"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_ar"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:textColor="@color/ar_device_name"
            android:textSize="14sp" />
    </RelativeLayout>

</com.phonar.ar.DeviceLayerLayout>